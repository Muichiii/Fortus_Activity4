@model Fortus_Activity4.Models.AddGameViewModel

@{
    ViewData["Title"] = "Add New Game";
}

<div class="content-container">
    <div class="mb-4">
        <h1 class="display-6 fw-bold">Add New Game</h1>
        <p class="text-muted">Enter the details of the new game to add it to your collection.</p>
    </div>

    <form method="post">
        <div class="mb-3">
            <label class="form-label fw-bold" asp-for="Title">Title</label>
            <input type="text" class="form-control" placeholder="Enter game title" asp-for="Title" required />
            <span asp-validation-for="Title" class="text-danger small"></span>
        </div>

        <div class="mb-3">
            <label class="form-label fw-bold" asp-for="Genre">Genre</label>
            <input type="text" class="form-control" placeholder="Enter game genre" asp-for="Genre" required />
            <span asp-validation-for="Genre" class="text-danger small"></span>
        </div>

        <div class="mb-4">
            <label class="form-label fw-bold" asp-for="Device">Device</label>
            <input type="text" class="form-control" placeholder="Enter compatible device" asp-for="Device" required />
            <span asp-validation-for="Device" class="text-danger small"></span>
        </div>

        <div class="d-flex gap-2">
            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                <i class="bi bi-save"></i> Save Game
            </button>
            <a asp-controller="Games" asp-action="List" class="btn btn-outline-secondary px-4">
                Cancel
            </a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}