@model Fortus_Activity4.Models.Entities.Game

@{
    ViewData["Title"] = "Edit Game";
}

<div class="content-container">
    <div class="mb-4">
        <h1 class="display-6 fw-bold">Edit Game</h1>
        <p class="text-muted">Modify the details of the selected game or remove it from your collection.</p>
    </div>

    @if (Model is null)
    {
        <div class="alert alert-danger shadow-sm">
            <i class="bi bi-exclamation-triangle"></i> Game not found.
        </div>
        <a asp-controller="Games" asp-action="List" class="btn btn-secondary">Back to List</a>
    }
    else
    {
        <form method="post">
            <div class="mb-3">
                <label class="form-label fw-bold" asp-for="Id">Game ID</label>
                <input type="text" class="form-control bg-light" asp-for="Id" readonly />
                <small class="text-muted">ID cannot be modified.</small>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold" asp-for="Title">Title</label>
                <input type="text" class="form-control" placeholder="Enter game title" asp-for="Title" required />
                <span asp-validation-for="Title" class="text-danger small"></span>
            </div>

            <div class="mb-3">
                <label class="form-label fw-bold" asp-for="Genre">Genre</label>
                <input type="text" class="form-control" placeholder="Enter game genre" asp-for="Genre" required />
                <span asp-validation-for="Genre" class="text-danger small"></span>
            </div>

            <div class="mb-4">
                <label class="form-label fw-bold" asp-for="Device">Device</label>
                <input type="text" class="form-control" placeholder="Enter compatible device" asp-for="Device" required />
                <span asp-validation-for="Device" class="text-danger small"></span>
            </div>

            <div class="d-flex justify-content-between align-items-center border-top pt-4">
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary px-4 shadow-sm">
                        <i class="bi bi-check-lg"></i> Save Changes
                    </button>
                    <a asp-controller="Games" asp-action="List" class="btn btn-outline-secondary px-4">
                        Cancel
                    </a>
                </div>

                <button type="submit" class="btn btn-danger px-4 shadow-sm" asp-action="Delete" asp-controller="Games">
                    <i class="bi bi-trash"></i> Delete Game
                </button>
            </div>
        </form>
    }
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}